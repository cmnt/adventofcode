{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": ["warn", 4],
    "no-continue": "off",
    "no-console": "off",
    "max-len": ["error", 200],
    "no-use-before-define": "off",
    "radix": "off",
    "no-bitwise": "off",
    "no-param-reassign": "off",
    "no-shadow": "off",
    "array-callback-return": "off",
    "no-prototype-builtins": "off",
    "semi": ["error", "never"]
  }
}
